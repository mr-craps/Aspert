<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aspert.PageTemplate">
    <ContentView.Content>
        <Grid RowDefinitions="*,12*,*">
            <ImageButton x:Name="btnMenu" 
                         BackgroundColor="Transparent"
                         Clicked="OnClicked"
                         HorizontalOptions="Start"
                         Padding="10"
                         Source="{StaticResource MenuIcon}"/>
        <Image Grid.Row="1" 
               Aspect="Fill" 
               Source="{StaticResource Background}"/>
        <ContentView x:Name="BodyContent" 
                     Grid.Row="1"/>
        <ImageButton x:Name="btnBack" 
                     Grid.Row="2"
                     BackgroundColor="Transparent"
                     Clicked="OnClicked"
                     HorizontalOptions="Start"
                     Padding="10"
                     Source="{StaticResource BackIcon}"/>
        <ImageButton x:Name="btnConfiguration" 
                     Grid.Row="2"             
                     BackgroundColor="Transparent"
                     Clicked="OnClicked"
                     HorizontalOptions="End"
                     Margin="5,0,5,5"
                     Source="{StaticResource UserIcon}"/>
    </Grid>
    </ContentView.Content>
</ContentView>