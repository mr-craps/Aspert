<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Aspert.ViewModels"
             xmlns:aspert="clr-namespace:Aspert"
             x:Class="Aspert.NewsPage"
             x:DataType="{x:Type vm:NewsPageViewModel}">
    <Grid BackgroundColor="{StaticResource LightGray}"
          RowDefinitions="*,12*,*">
        <Grid.BindingContext>
            <vm:NewsPageViewModel/>
        </Grid.BindingContext>
        <!-- Menú -->
        <ImageButton Grid.Row="0"
                     BackgroundColor="Transparent"
                     Command="{Binding Push}"
                     CommandParameter="{Type aspert:MenuPage}"
                     HorizontalOptions="Start"
                     Padding="10"
                     Source="menub_aspert.png"/>
        <ImageButton Grid.Row="2"
                     BackgroundColor="Transparent"
                     Command="{Binding Back}"
                     HorizontalOptions="Start"
                     Padding="10"
                     Source="back_aspert.png"/>
        <!-- Fondo -->
        <Image Grid.Row="1"
               Aspect="Fill"
               Source="bg4_aspert.png"/>
        <!-- Contenido -->
        <ScrollView Grid.Row="1">
            <Grid Padding="20">
                <!--
                  RowDefinitions="110,50,30,Auto,50,30,Auto,50,30,Auto,50,30,Auto"
                -->
                <CollectionView ItemsSource="{Binding Feeds, Source={Static vm:NewsPageViewModel.Instance}}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type vm:Feed}">
                            <StackLayout>
                                <Label Text="{Binding Title}"
                                       TextColor="Black"/>
                                <Label Text="{Binding Summary}"
                                       TextColor="Black"
                                       TextType="Html"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
